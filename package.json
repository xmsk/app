{
  "main": "dist",
  "private": true,
  "scripts": {
    "test": "npm run build && npm run lint && npm run mocha",
    "lint": "tslint --project . -t verbose",
    "mocha": "mocha --require ts-node/register ./test/*.test.*",
    "build": "tsc -p .",
    "watch": "tsc -p . -w --preserveWatchOutput --inlineSourceMap",
    "start": "tabris serve -a -w"
  },
  "dependencies": {
    "tabris": "~3.2.1",
    "tabris-decorators": "~3.2.1"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/sinon": "^7.5.1",
    "@types/sinon-chai": "^3.2.3",
    "chai": "^4.2.0",
    "mocha": "^6.2.2",
    "sinon": "^8.0.2",
    "sinon-chai": "^3.4.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typescript": "~3.3.4000"
  }
}
