{
  "main": "dist",
  "private": true,
  "scripts": {
    "test": "npm run build && npm run lint && npm run mocha",
    "lint": "tslint --project . -t verbose",
    "mocha": "mocha --require ts-node/register ./test/*.test.*",
    "build": "tsc -p .",
    "watch": "tsc -p . -w --preserveWatchOutput --inlineSourceMap",
    "start": "tabris serve -a -w"
  },
  "dependencies": {
    "reflect-metadata": ">=0.1.13",
    "tabris": "~3.3.0",
    "tabris-cli": "^3.3.0",
    "tabris-decorators": "~3.3.0",
    "typedjson": ">=1.5.1",
    "typedoc": "^0.16.10"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/sinon": "^7.5.1",
    "@types/sinon-chai": "^3.2.3",
    "chai": "^4.2.0",
    "mocha": "^6.2.2",
    "sinon": "^8.1.1",
    "sinon-chai": "^3.5.0",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1",
    "typescript": "~3.3.4000"
  }
}
